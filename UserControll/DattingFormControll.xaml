<UserControl x:Class="DatingProgram.UserControll.DattingFormControll"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DatingProgram.UserControll"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="400">
    <Border BorderBrush="Black" BorderThickness="0.5" CornerRadius="5" Padding="10" Margin="10" Height="450">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Image x:Name="PhotoImage" Width="300" Height="250" Stretch="Fill"/>
                <Button x:Name="btPhotoLeft" Content=">" FontSize="20" HorizontalAlignment="Right" Click="btPhotoLeft_Click"/>
                <Button x:Name="btPhotoRight" Content="&lt;" FontSize="20" HorizontalAlignment="Left" Click="btPhotoRight_Click"/>
            </Grid>
            <Grid Grid.Row="1">
                <StackPanel>
                    <TextBlock x:Name="tbInfo" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Margin="0 0">
                        <Run Text="{Binding Client.FirstName}"/>
                        <Run Text="{Binding Client.SecondName}"/>
                        <Run Text=", "/>
                        <Run Text="{Binding Characteristic.Age}"/>
                    </TextBlock>
                    <TextBlock x:Name="tbPurposeDating" Text="{Binding DatingForm.PurposeDating}" FontSize="16" HorizontalAlignment="Left" Margin="0 5"/>
                    <TextBlock x:Name="tbCity" Text="{Binding Characteristic.City}" FontSize="16" HorizontalAlignment="Left" Margin="0 5"/>
                    <TextBlock x:Name="tbAboutMe" Text="{Binding DatingForm.Description}" FontSize="14" TextWrapping="Wrap" HorizontalAlignment="Left" Margin="0 5"/>
                    <Button x:Name="btLike" Content="❤ Нравится" FontSize="16" Width="150" HorizontalAlignment="Center" Margin="0 0" Click="btLike_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>
