<Window x:Class="DatingProgram.Windows.DattingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatingProgram.Windows"
        mc:Ignorable="d"
        Title="Приложение Знакомство"  d:DesignHeight="550" d:DesignWidth="800"
        MinHeight="550"
        MinWidth="800" WindowStartupLocation="CenterScreen">   
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="Bisque">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <StackPanel x:Name="spMyProfile" Cursor="Hand" MouseLeftButtonDown="spMyProfile_MouseLeftButtonDown" VerticalAlignment="Center">
                    <Image Width="35" Height="35" Source="/Resource/sysImages/4360835.png"/>
                    <Label Content="Мой профиль" FontWeight="DemiBold"/>
                </StackPanel>

                <StackPanel x:Name="spDatting" Margin="20 0 20 0" Cursor="Hand" MouseLeftButtonDown="spDatting_MouseLeftButtonDown" VerticalAlignment="Center">
                    <Image Width="35" Height="35" Source="/Resource/sysImages/158722.png"/>
                    <Label Content="К Анкетам" FontWeight="DemiBold"/>
                </StackPanel>

                <StackPanel x:Name="spNotify" Margin="10 0 20 0" Cursor="Hand" MouseLeftButtonDown="spNotify_MouseLeftButtonDown" VerticalAlignment="Center">
                    <Image Width="35" Height="35" Source="/Resource/sysImages/107822.png"/>
                    <Label Content="Уведомления" FontWeight="DemiBold"/>
                </StackPanel>

                <StackPanel x:Name="spMyPairs" Cursor="Hand" MouseLeftButtonDown="spMyPairs_MouseLeftButtonDown" VerticalAlignment="Center">
                    <Image Width="35" Height="35" Source="/Resource/sysImages/88271.png"/>
                    <Label Content="Мои пары" FontWeight="DemiBold"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>
