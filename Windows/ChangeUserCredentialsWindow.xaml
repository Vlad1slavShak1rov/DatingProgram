<Window x:Class="DatingProgram.Windows.ChangeUserCredentialsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Смена логина и пароля" Height="250" Width="300"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20">
        
        <TextBlock Text="Новый логин:" Margin="0,0,0,5"/>
        <TextBox Name="tbLogin" Height="25" Margin="0,0,0,15"/>

        <TextBlock Text="Новый пароль:" Margin="0,0,0,5"/>
        <PasswordBox Name="pbPassword" Height="25" Margin="0,0,0,15"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Width="80" Height="30" 
                    Margin="0,0,10,0" Click="btSave_Click"/>
            <Button Content="Отмена" Width="80" Height="30" 
                    Click="btCancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>