<Page x:Class="DatingProgram.Pages.MyPairsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DatingProgram.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MyPairsPage">
    <Grid>
        <ListBox x:Name="lbMyPairs" ItemsSource="{Binding MyPairs}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1">
                        <StackPanel>
                            <TextBlock>
                                <Run Text="Дата создания пары: " FontWeight="Bold"/>
                                <Run Text="{Binding Pair.DateCreated}"/>
                                <LineBreak/>
                                <Run Text="Партнер"/>
                                <LineBreak/>
                                <Run Text="{Binding Partner.SecondName}"/>
                                <Run Text="{Binding Partner.FirstName}"/>
                                <Run Text="{Binding Partner.LastName}"/>
                                <LineBreak/>
                                <Run Text="Контакт: "/>
                                <Run Text="{Binding Partner.Contact}"/>
                            </TextBlock>
                            <Button x:Name="btShowProfile" Content="Показать анкету" Margin="0 10" Click="btShowProfile_Click"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Page>
