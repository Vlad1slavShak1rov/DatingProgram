<Page x:Class="DatingProgram.Pages.MyProfile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DatingProgram.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      MinHeight="550"
      MinWidth="800"
      Title="MyProfile">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <StackPanel>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="50 20">
                    <Image x:Name="pcAvatar" Width="200" Height="200"  Source="/Resource/sysImages/1640528661_1-abrakadabra-fun-p-serii-chelovek-na-avu-1.png" Stretch="Fill"/>
                    <Button x:Name="btChangePhoto" Content="Изменить фото" FontSize="14" Width="120" Margin="0 10 0 0" Click="btChangePhoto_Click"/>
                </StackPanel>

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 0">
                    <Label Content="Данные об аккаунте" FontSize="16" HorizontalAlignment="Center"/>

                    <StackPanel Margin="0 10 0 0">
                        <TextBlock Text="Логин:" FontWeight="Bold" FontSize="14"/>
                        <TextBox x:Name="tbLogin" Text="{Binding User.Login}" FontSize="14" Width="200"/>
                    </StackPanel>

                    <StackPanel Margin="0 10 0 0">
                        <TextBlock Text="Пароль:" FontWeight="Bold" FontSize="14"/>
                        <TextBox x:Name="pbPassword" Text="{Binding User.Password}" FontSize="14" Width="200"/>
                    </StackPanel>

                    <Button x:Name="btSaveUserInfo" Content="Сохранить" FontSize="16" Margin="0 10" Click="btSaveUserInfo_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid Grid.Column="1">
            <Label Content="Обо мне" FontSize="16" HorizontalAlignment="Center"/>
            <StackPanel>
                <StackPanel Margin="0 30" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Label Content="Имя" FontSize="18" FontWeight="Bold"/>
                    <TextBox x:Name="tbName" Text="{Binding Client.FirstName}" FontSize="16" Width="150" HorizontalAlignment="Left"/>

                    <Label Content="Фамилия" FontSize="18" FontWeight="Bold"/>
                    <TextBox x:Name="tbSurname" Text="{Binding Client.SecondName}" FontSize="16" Width="150" HorizontalAlignment="Left"/>

                    <Label Content="Отчество" FontSize="18" FontWeight="Bold"/>
                    <TextBox x:Name="tbLastName" Text="{Binding Client.LastName}" FontSize="16" Width="150" HorizontalAlignment="Left"/>

                    <Label Content="Телефонный номер" FontSize="18" FontWeight="Bold"/>
                    <TextBox x:Name="tbPhoneNum" Text="{Binding Client.Contact}" FontSize="16" Width="150" HorizontalAlignment="Left"/>
                </StackPanel>

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 0 0 0">
                    <Button x:Name="btSave" Content="Сохранить изменения" FontSize="16" Click="btSave_Click"/>
                    <Button x:Name="btMyForm" Content="Показать мою анкету" Margin="0 10" FontSize="16" Click="btMyForm_Click"/>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
