<Page x:Class="DatingProgram.Pages.AllUsersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DatingProgram.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AllUsersPage">

    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="btEdit" Content="Изменить" Margin="10 10" Click="btEdit_Click"/>
                <Button x:Name="btRemove" Content="Удалить"  Margin="0 10" Click="btRemove_Click"/>
            </StackPanel>

            <DataGrid x:Name="dgAllUsers" ItemsSource="{Binding Client}" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="DataGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="*"/>
                    <DataGridTextColumn Header="Логин" Binding="{Binding User.Login}" Width="*"/>
                    <DataGridTextColumn Header="Пароль" Binding="{Binding User.Password}" Width="*"/>
                    <DataGridTextColumn Header="ID Аккаунта" Binding="{Binding User.Id}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
